{
	"name": "php-tootbot/php-tootbot",
	"description": "A boilerplate library for Mastodon bots.",
	"homepage": "https://github.com/php-tootbot/php-tootbot",
	"license": "MIT",
	"type": "library",
	"keywords": ["Mastodon", "bot", "toot", "automation"],
	"authors": [
		{
			"name": "smiley",
			"email": "smiley@chillerlan.net",
			"homepage": "https://github.com/codemasher"
		},
		{
			"name": "Contributors",
			"homepage":"https://github.com/php-tootbot/php-tootbot/graphs/contributors"
		}
	],
	"funding": [
		{
			"type": "Ko-Fi",
			"url": "https://ko-fi.com/codemasher"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": "^8.1",
		"ext-curl": "*",
		"ext-fileinfo": "*",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-openssl": "*",
		"ext-sodium": "*",
		"chillerlan/php-dotenv": "^3.0",
		"chillerlan/php-httpinterface": "^6.0",
		"chillerlan/php-oauth": "^1.0",
		"chillerlan/php-settings-container": "^3.2",
		"monolog/monolog": "^3.6"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.5",
		"phan/phan": "^5.4"
	},
	"autoload": {
		"psr-4": {
			"PHPTootBot\\PHPTootBot\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"PHPTootBot\\PHPTootBotTest\\": "tests/"
		}
	},
	"scripts": {
		"phpunit": "@php vendor/bin/phpunit",
		"phan": "@php vendor/bin/phan"
	},
	"config": {
		"lock": false,
		"sort-packages": true,
		"platform-check": true
	}
}
