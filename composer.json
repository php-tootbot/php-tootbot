{
	"name": "php-tootbot/php-tootbot",
	"description": "A template library for Mastodon bots.",
	"homepage": "https://github.com/php-tootbot/php-tootbot",
	"license": "MIT",
	"type": "library",
	"keywords": ["Mastodon", "bot", "toot", "automation"],
	"authors": [
		{
			"name": "smiley",
			"email": "smiley@chillerlan.net",
			"homepage": "https://github.com/codemasher"
		},
		{
			"name": "Contributors",
			"homepage":"https://github.com/php-tootbot/php-tootbot/graphs/contributors"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": "^8.1",
		"ext-curl": "*",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-openssl": "*",
		"chillerlan/php-dotenv": "^2.1.2",
		"chillerlan/php-oauth-providers": "dev-main#406fd8fa03175099e94ea383d04582c2f5f4a6f8",
		"monolog/monolog": "^3.2",
		"php-http/multipart-stream-builder": "^1.3"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.2",
		"phan/phan": "^5.4"
	},
	"autoload": {
		"psr-4": {
			"PHPTootBot\\PHPTootBot\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"PHPTootBot\\PHPTootBotTest\\": "tests/"
		}
	},
	"scripts": {
		"phpunit": "@php vendor/bin/phpunit",
		"phan": "@php vendor/bin/phan"
	},
	"config": {
		"lock": false,
		"sort-packages": true,
		"platform-check": true
	}
}
